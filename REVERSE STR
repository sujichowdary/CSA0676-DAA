#include <stdio.h>
int main()
{
   char s[100], r[100];
   int i, end, count = 0;

   printf("Input a string\n");
   scanf("%s",s);

   while (s[count] != '\0')
      count++;

   end = count - 1;

   for (i= 0;i<count;i++) 
   {
      r[i] = s[end];
      end--;
   }

   r[i] = '\0';

   printf("%s\n", r);

   return 0;
}
